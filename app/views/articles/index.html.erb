<h1>This is the index page</h1>

<table BORDER=1 CELLSPACING=10>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |a| %>
            <tr>
                <td><%=a.title%></td>
                <td><%=a.description%></td>
                <td><%= link_to 'Show', article_path(a) %> <%= link_to 'Edit', edit_article_path(a) %> <%= link_to 'Delete', article_path(a), method: :delete, data: { confirm: "Are you sure?" } %></td>
                <td><%= a.user.username %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<p>
<%= link_to 'Create new Article', new_article_path %>
</p>
